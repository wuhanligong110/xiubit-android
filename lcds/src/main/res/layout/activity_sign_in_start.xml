<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




        <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.255" />

        <ImageView
            android:id="@+id/bgIv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/signin_init_bg"
            app:layout_constraintDimensionRatio="1080:2137"
            />

        <ImageView
            android:id="@+id/goldCoinIv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/frame_sign_gold_down1"
            app:layout_constraintDimensionRatio="1080:1016"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />




        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.47" />

        <Button
            android:id="@+id/signBtn"
            android:layout_width="@dimen/w193"
            android:layout_height="@dimen/w49"
            android:background="@drawable/sign_in_btn"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline2"
            android:ellipsize="none"
            android:text="签到"
            android:textSize="20dp"
            android:textColor="@color/text_red_common"/>

        <TextView
            android:id="@+id/signDayNumTv"
            android:layout_marginTop="@dimen/w12"
            app:layout_constraintTop_toBottomOf="@id/signBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/w12"
            android:textColor="@color/text_white_common"
            android:text="连续签到 0 (天)"/>

        <TextView
            android:id="@+id/lookAwardMoneyEntry"
            android:padding="@dimen/w8"
            app:layout_constraintTop_toBottomOf="@id/signDayNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/w10"
            android:textColor="@color/text_white_common"
            android:text="查看累计奖励金>>"/>



    </android.support.constraint.ConstraintLayout>