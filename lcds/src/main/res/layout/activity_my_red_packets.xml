<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroud_common"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white_common"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/list_viewpager_title_height">

            <TextView
                android:gravity="center"
                android:id="@+id/text1"
                android:textColor="@color/text_blue_common"
                android:textSize="14dp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="投资红包"/>

            <TextView
                android:gravity="center"
                android:id="@+id/text2"
                android:textColor="@color/text_black_common"
                android:textSize="14dp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="派发红包"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/text_blue_common"/>

        <View style="@style/line_horizontal_common"/>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="@color/WHITE"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"
        android:overScrollMode="never"/>


</LinearLayout>