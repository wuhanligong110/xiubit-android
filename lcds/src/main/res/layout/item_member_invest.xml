<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:orientation="vertical">

    <View
        android:id="@+id/divideV"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/backgroud_common"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/dateTv"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/text_black_common"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="2099-25-69"
        />

    <View
        style="@style/line_horizontal_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <com.toobei.common.view.ShapedImageView
                android:id="@+id/headIv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@color/WHITE"
                android:scaleType="fitXY"
                app:shape_mode="circle"
                tools:src="@drawable/img_mine_cfp_face"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/text_black_common"
                android:textSize="15dp"
                tools:text="张三"/>

            <TextView
                android:id="@+id/nameSuffixTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_gray_common"/>

                           </LinearLayout>


            <ImageView
                android:id="@+id/cfgTypeTagIv"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                tools:src="@drawable/ic_direct_cfg_tag"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/platformNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_common_title"
                    android:textSize="14dp"
                    tools:text="平台名"/>

                <TextView
                    android:id="@+id/platformTypeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="投资平台"
                    android:textColor="@color/text_gray_common"
                    android:textSize="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/issueAmountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_common_title"
                    android:textSize="14dp"
                    tools:text="00.00"/>

                <TextView
                    android:id="@+id/issueTypeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="投资金额(元)"
                    android:textColor="@color/text_gray_common"
                    android:textSize="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commissionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_red_common"
                    android:textSize="14dp"
                    tools:text="00.00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="我的佣金(元)"
                    android:textColor="@color/text_gray_common"
                    android:textSize="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line_horizontal_common"/>

</LinearLayout>