<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/backgroud_common">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/WHITE">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/contantLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_common_title"
                android:textSize="14dp"
                android:text="姓名"/>

            <View
                android:layout_marginLeft="10dp"
               style="@style/line_vertical_common"/>


            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_common_title"
                android:textSize="14dp"
                android:text=""/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@id/contantLl"
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_common"
            android:textSize="12dp"
            android:text=""
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/infoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_black_common"
            android:textSize="14dp"
            android:gravity="right"
            android:text=""/>

        <View
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/infoTv"
            style="@style/line_vertical_common"/>


    </RelativeLayout>
    <View
        style="@style/line_horizontal_common"
        android:layout_marginBottom="10dp"/>

</LinearLayout>