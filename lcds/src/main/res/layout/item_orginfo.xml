<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_orginfo_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shadow_product_item"
              android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w213"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">



                <ImageView
                    android:id="@+id/orgLogoIV"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="@dimen/w6"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/hotTagIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/org_tag_hot"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/w6"
                android:id="@+id/orgTagContantLi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/w8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.v5ent.xiubit.view.MyTextView
                    android:id="@+id/averageRateTv"
                    android:textColor="@color/text_red_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/w24"
                    android:text="0.0%"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均年化收益率"
                    android:textColor="@color/text_gray_common"
                    android:textSize="@dimen/w11"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/w18"
                android:layout_marginBottom="@dimen/w12"
                android:id="@+id/orgAdvantageTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hasSoldALlIv"
                android:textColor="@color/text_gray_common_title"
                android:textSize="@dimen/w10"
                android:text="平台简介"
                android:singleLine="true"
                android:gravity="center"/>

            <View
                style="@style/line_horizontal_common"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <com.v5ent.xiubit.view.MyTextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/gradeTv"
                        android:text="AAA"
                        android:textColor="@color/text_black_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textSize="@dimen/w12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w4"
                        android:text="安全等级"
                        android:textColor="@color/text_gray_common"
                        android:textSize="@dimen/w10"/>
                </LinearLayout>

                <View
                    style="@style/line_vertical_common"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <com.v5ent.xiubit.view.MyTextView
                        android:gravity="bottom"
                        android:layout_alignParentRight="true"
                        android:id="@+id/orgFeeRatioTv"
                        android:text="1.5%"
                        android:textColor="@color/text_black_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/w12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w4"
                        android:text="佣金率"
                        android:textColor="@color/text_gray_common"
                        android:textSize="@dimen/w10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <ImageView
        android:id="@+id/hasSoldALlIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/has_sold_all_tag"
        android:visibility="visible"/>



</RelativeLayout>