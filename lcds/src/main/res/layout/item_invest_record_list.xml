<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/WHITE"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <View
        style="@style/line_horizontal_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <org.xsl781.ui.view.RoundImageView
                        android:id="@+id/img_customer_face"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_customer_cus"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_customer_name"
                                style="@style/text_middle15_black_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:text="张小三"
                                android:textSize="16dp"/>

                            <View
                                android:layout_width="1px"
                                android:layout_height="12dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@color/line_common"/>

                            <TextView
                                android:id="@+id/text_customer_phone"
                                style="@style/text_middle_black_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.01"
                                android:text="18898766534"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_customer_invest_date"
                                style="@style/text_small_gray_size_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2016-02-25"/>

                            <TextView
                                android:id="@+id/text_customer_invest_date_time"
                                style="@style/text_small_gray_size_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="9:30"/>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/img_arrow_right"/>
                </LinearLayout>

                <View
                    style="@style/line_horizontal_common"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical"
                        android:paddingTop="15dp">


                        <TextView
                            android:id="@+id/text_customer_product_name"
                            style="@style/text_small_common64_size_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="天天牛A90天"/>


                        <TextView
                            android:id="@+id/text_customer_product_year_rate"
                            style="@style/text_small_common64_size_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="年化收益 8.5%"/>


                        <TextView
                            android:id="@+id/text_customer_product_commission_rate"
                            style="@style/text_small_common64_size_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="年化佣金 1.5%"/>
                    </LinearLayout>

                    <View
                        style="@style/line_vertical_common"></View>

                    <LinearLayout
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@id/img_go_right"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_customer_invest_field"
                            style="@style/text_small_common64_size_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="投资金额(元)"/>

                        <com.v5ent.xiubit.view.MyTextView
                            android:id="@+id/text_customer_invest_money"
                            style="@style/text_middle_blue_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="0.00"
                            android:textSize="17dp"/>
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/backgroud_common"/>

</LinearLayout>