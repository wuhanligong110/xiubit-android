<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/invite_cfp_list_item_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/item_click_bg"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_myincome_type_name"
            style="@style/text_middle_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="销售佣金"/>

        <TextView
            style="@style/text_middle_gray96_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/text_myincome_type_name"
            android:text="(元)"/>

        <ImageView
            android:id="@+id/img_go_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/img_arrow_right"/>

        <TextView
            android:id="@+id/text_myincome_item_money"
            style="@style/text_middle_blue_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/img_go_right"
            android:text="88.88"/>
    </RelativeLayout>

    <View style="@style/line_horizontal_common"/>

</LinearLayout>