<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/topTitleAndStatueLl"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/text_blue_common"
        android:visibility="invisible"/>

    <RelativeLayout

        android:id="@+id/headRe"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/status_bar"
        android:background="@color/backgroud_transparent">

        <TextView
            android:id="@+id/titleTv"
            style="@style/top_text_color_size_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="12dp"
            android:text=""
            android:visibility="invisible"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/msgRl"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/topShapeCircle"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/shape_circle"/>

            <ImageView
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true"
                android:id="@+id/infoIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_mine_msg_icon"/>

           
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>