<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/WHITE"
    android:paddingTop="@dimen/w30"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balance_ico"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.toobei.common.view.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w18"
            android:textColor="@color/text_black_common"
            android:text="¥"
            android:layout_marginRight="@dimen/w5"/>

        <com.v5ent.xiubit.view.MyTextView
            android:id="@+id/balanceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/text_black_common"
            android:textSize="@dimen/w36"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray_common"
        android:textSize="@dimen/w16"
        android:text="我的余额"/>

    <TextView
        android:layout_marginTop="@dimen/w64"
        android:id="@+id/withdrawTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w55"
        android:text="提现"
        android:gravity="center"
        android:textSize="@dimen/w18"
        android:textColor="@color/text_white_common"
        android:background="@drawable/btn_blue_corner5_selector"
        android:layout_marginLeft="@dimen/w15"
        android:layout_marginRight="@dimen/w15"/>

</LinearLayout>