<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud_common"
    android:paddingLeft="@dimen/w10"
    android:paddingRight="@dimen/w10"
    android:paddingBottom="@dimen/w15">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/w134"
        android:background="@drawable/bg_redpacket_coupon"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/w20">

            <com.toobei.common.view.AutoResizeTextView
                android:id="@+id/amountTv"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/w4"
                android:layout_marginRight="@dimen/w4"
                android:layout_height="@dimen/w42"
                android:textSize="@dimen/w36"
                android:textColor="@color/text_red_common"
                app:fontfit_typeface="dinot_medium"
                android:gravity="center"
                tools:text="000"/>

            <com.toobei.common.view.AutoResizeTextView
                android:id="@+id/remarkTv"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w28"
                android:layout_marginLeft="@dimen/w4"
                android:layout_marginRight="@dimen/w4"
                android:textSize="@dimen/w13"
                android:textColor="@color/text_gray_common"
                android:gravity="center"
                tools:text="投100000抵现"/>
            
            <ImageView
                android:id="@+id/immediaUseIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/w10"
                android:scaleType="center"
                tools:src="@drawable/img_immediause_red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="243"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/w15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/w6"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/w14"
                        android:textColor="@color/text_black_common"
                        android:textStyle="bold"
                        tools:text="周年庆红包"
                        android:singleLine="true"
                        />

                    <ImageView
                        android:paddingRight="@dimen/w15"
                        android:id="@+id/sendIv"
                        android:layout_width="@dimen/w65"
                        android:layout_height="@dimen/w21"
                        android:src="@drawable/tag_send_repaget_red"/>

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/contentInfoCantainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                    android:id="@+id/platformLimitTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/w12"
                    android:textColor="@color/text_gray_common_title"
                    tools:text="适用平台: 网贷"
                    android:layout_marginBottom="@dimen/w4"/>

                <TextView
                    android:id="@+id/productLimitTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/w12"
                    android:textColor="@color/text_gray_common_title"
                    tools:text="适用产品: 30天及以上"
                    android:layout_marginBottom="@dimen/w4"/>

                <TextView
                    android:id="@+id/fristInvestLimitTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/w12"
                    android:textColor="@color/text_gray_common_title"
                    tools:text="首投限制: 不限"
                    android:layout_marginBottom="@dimen/w4"
                   />

                <TextView
                    android:id="@+id/deadDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/w12"
                    android:textColor="@color/text_gray_common_title"
                    tools:text="过期时间：0000-00-00"
                    />
                </LinearLayout>


    </LinearLayout>
        </LinearLayout>
        
        <View
            android:background="@color/line_common"
            android:layout_width="1px"
            android:layout_height="@dimen/w100"/>



    </LinearLayout>

    <ImageView
        android:id="@+id/usedSignIv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/w23"
        android:layout_width="@dimen/w76"
        android:layout_height="@dimen/w62"
        android:src="@drawable/img_redpack_has_use"/>


</RelativeLayout>