<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rootView"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/text_blue_common">

        <com.v5ent.xiubit.view.MyTextView
            android:id="@+id/profitLossDailyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="43dp"
            android:textColor="@color/text_white_common"
            android:text="0.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/text_blue_common_light"
            android:text="昨日收益(元)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/blue_bg_deep"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <com.toobei.common.view.MyTextView
                android:id="@+id/investmentAmountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="@color/text_white_common"
                android:text="0.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_blue_common_light"
                android:text="我的资产总值(元)"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:background="#44000000"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <com.toobei.common.view.MyTextView
                android:id="@+id/profitLossTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="@color/text_white_common"
                android:text="0.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_blue_common_light"
                android:text="总收益含分红(元)"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/WHITE"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/gotoTradeDetialLl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_fund_trade_detial"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_black_common"
                android:text="交易明细"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gotoInvest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_fund_goto_invest"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_black_common"
                android:text="前往投资"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gotoGetbackLl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_fund_get_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_black_common"
                android:text="前往赎回"/>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line_horizontal_common"
        android:layout_marginBottom="12dp"/>


    <View
        style="@style/line_horizontal_common"/>
</LinearLayout>