<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/w15"
    android:paddingRight="@dimen/w15"
    android:background="@color/WHITE"
    android:paddingTop="@dimen/w10"
    >

    <TextView
        android:id="@+id/signNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w12"
        android:textStyle="bold"
        android:textColor="@color/text_gray_common_title"
        tools:text="第0签"/>

    <TextView
        android:layout_marginBottom="@dimen/w10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/w6"
        android:id="@+id/signDateTv"
        app:layout_constraintTop_toBottomOf="@id/signNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w9"
        android:textColor="@color/text_gray_common"
        tools:text="10-30 00:00"/>

    <TextView
        android:id="@+id/signAwardTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/w10"
        android:textSize="@dimen/w21"
        android:textColor="@color/text_red_common"
        tools:text="+0.00"/>

    <View
        android:id="@+id/bottomLineView"
        style="@style/line_horizontal_common"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>