<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_common"
    android:gravity="center_horizontal">



    <LinearLayout
        android:layout_marginBottom="@dimen/w4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w30"
        android:background="@color/WHITE"
        android:paddingLeft="@dimen/w15"
        android:paddingRight="@dimen/w15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_common"
            android:gravity="center_vertical"
            android:text="修改函数、字段"/>

        <TextView
            android:id="@+id/test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_red_common"
            android:text="no"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="@dimen/w4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w30"
        android:background="@color/WHITE"
        android:paddingLeft="@dimen/w15"
        android:paddingRight="@dimen/w15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_common"
            android:gravity="center_vertical"
            android:text="新增类、函数"/>

        <TextView
            android:id="@+id/test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_red_common"
            android:text="no"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/w4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w30"
        android:background="@color/WHITE"
        android:paddingLeft="@dimen/w15"
        android:paddingRight="@dimen/w15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_black_common"
            android:text="修改添加String、color、资源文件"/>

        <TextView
            android:id="@+id/test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_red_common"
            android:text="no"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/w4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w30"
        android:background="@color/WHITE"
        android:paddingLeft="@dimen/w15"
        android:paddingRight="@dimen/w15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_common"
            android:gravity="center_vertical"
            android:text="XML_UI修复"/>

        <TextView
            android:id="@+id/test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_red_common"
            android:text="yes"/>
    </LinearLayout>

    <Button
        android:id="@+id/cashTestBtn"
        android:textColor="@color/text_black_common"
        android:text="  崩溃测试(空指针越界)，请点击  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"/>

</LinearLayout>