<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/WHITE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/orgLogoIV"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <com.v5ent.xiubit.view.MyTextView
            android:id="@+id/investingAmtTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00.00"
            android:textColor="@color/text_black_common"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.v5ent.xiubit.view.MyTextView
                android:id="@+id/investingProfitTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_black_common"
                android:text="00.00"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/black_arrow_right_mine"/>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line_horizontal_common"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>