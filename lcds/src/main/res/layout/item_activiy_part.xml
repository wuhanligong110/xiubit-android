<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud_common">


    <View
        android:id="@+id/headDividV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w15"
        android:background="@color/backgroud_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w15"
        android:layout_marginRight="@dimen/w15"
        android:layout_marginBottom="@dimen/w15"
        android:background="@drawable/shape_item_card_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/imgContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w160"
            android:layout_marginBottom="@dimen/w13">

            <com.toobei.common.view.RCRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:round_corner_top_left="5dp"
                app:round_corner_top_right="5dp">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />


            </com.toobei.common.view.RCRelativeLayout>
            <ImageView
                android:id="@+id/coverIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_cover_activity_end_bg"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/w10"
            android:paddingRight="@dimen/w10"
            android:layout_marginBottom="@dimen/w8"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/orgNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w12"
                android:textColor="@color/text_blue_common"
                android:background="@drawable/shape_org_top_tag"/>

            <TextView
                android:id="@+id/titleTv"
                android:layout_marginLeft="@dimen/w10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w15"
                android:textColor="@color/text_black_common"
                android:textStyle="bold"
                android:singleLine="true"
                tools:text="国庆卡就是打开就是坑爹卡的是客户端"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/w10"
            android:paddingRight="@dimen/w10"
            android:layout_marginBottom="@dimen/w15">


            <TextView
                android:id="@+id/leftTimeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w12"
                android:textColor="@color/text_gray_common_title"
                tools:text="剩余100天"/>

            <TextView
                android:id="@+id/startTimeTv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w12"
                android:textColor="@color/text_gray_common_title"
                tools:text="活动开始时间：2088-99-66"/>
        </RelativeLayout>



    </LinearLayout>

</LinearLayout>