<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="10dp"
    android:background="@color/WHITE"
    android:gravity="center_vertical">

 
       <ImageView
           android:id="@+id/colorTagIv"
           android:layout_width="@dimen/w7"
           android:layout_height="@dimen/w7"
           android:layout_marginRight="@dimen/w8"/>

       <TextView
           android:id="@+id/orgNameTv"
           android:layout_width="wrap_content"
           android:minWidth="@dimen/w60"
           android:layout_height="wrap_content"
           android:textSize="@dimen/w12"
           android:textColor="@color/text_gray_common"
           android:layout_marginRight="@dimen/w4"
           tools:text="无形财富"/>

       <TextView
           android:id="@+id/percentTv"
           android:layout_width="wrap_content"
           android:minWidth="@dimen/w55"
           android:layout_height="wrap_content"
           android:textSize="@dimen/w12"
           android:textColor="@color/text_gray_common"
           tools:text="125.00%"/>
    
    
    
</LinearLayout>