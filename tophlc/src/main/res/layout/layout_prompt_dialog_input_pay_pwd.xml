<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:gravity="center"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/img_prompt_dialog_pay_pwd_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_ll_height"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/img_cancel" />

                <TextView
                    style="@style/text_middle18_black_bold_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="请输入支付密码" />
            </RelativeLayout>

            <View style="@style/line_horizontal_common" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_money_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_black_common"
                    android:textSize="30sp" />
            </LinearLayout>

            <View style="@style/line_horizontal_common" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >

                <com.jungly.gridpasswordview.GridPasswordView
                    android:id="@+id/gridpwd_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_info_common_ll_height"
                    android:layout_margin="12dp" />

                <TextView
                    android:id="@+id/text_forgetPayPwdTv"
                    style="@style/text_small_gray_size_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="忘记交易密码？"
                    android:textColor="#0F57F2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>