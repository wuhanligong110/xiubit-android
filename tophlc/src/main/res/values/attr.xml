<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="gridPasswordView">

        <attr name="textColor" format="color|reference"/>
        <attr name="textSize" format="dimension"/>

        <attr name="lineColor" format="color"/>
        <attr name="gridColor" format="color"/>
        <attr name="lineWidth" format="dimension"/>

        <attr name="passwordLength" format="integer"/>
        <attr name="passwordTransformation" format="string"/>

        <attr name="passwordType" format="enum">
            <enum name="numberPassword" value="0"/>
            <enum name="textPassword" value="1"/>
            <enum name="textVisiblePassword" value="2"/>
            <enum name="textWebPassword" value="3"/>
        </attr>

    </declare-styleable>
    <declare-styleable name="HeaderExpandableLayout">
        <attr name="hel_headerLayout" format="reference"/>
        <attr name="hel_contentLayout" format="reference"/>
        <attr name="hel_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="isLoop" format="boolean"/>
    </declare-styleable>

    <!--自动上下轮播的TextView-->
    <declare-styleable name="autoScrollHeight">
        <attr name="autoScrolltextSize" format="dimension"/>
        <attr name="padding" format="dimension"/>
        <attr name="animDuration" format="integer"/>
        <attr name="isUnderLine" format="boolean"/>
        <attr name="scrollDuration" format="integer"/>
        <attr name="autoScrolltextColor" format="color"/>
        <attr name="textGravity" >
            <flag name="right" value="0x01" />
            <flag name="left" value="0x02" />
        </attr>
    </declare-styleable>
</resources>