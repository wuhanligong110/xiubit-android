<resources>
    <!--主题样式-->
    <style name="ActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/actAnimation</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="ActivityThemeNew" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/actAnimation</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <!--Dialog 样式-->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/Color_0</item>
    </style>

    <style name="customLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/Color_0</item>
    </style>
    <!--todo     <item name="tabMaxWidth">@dimen/tab_max_width</item> -->
    <!--tabLayout的样式-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">150dp</item>
        <item name="tabIndicatorColor">@color/text_red_common</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/WHITE</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <!--btn按钮样式-->
    <style name="btn_login_style"> <!--登录 圆角-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_ll_height</item>
        <item name="android:background">@drawable/btn_big_blue_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">@dimen/top_title_text_size</item>
    </style>

    <style name="btn_two_left_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/common_ll_height</item>
        <item name="android:background">@drawable/btn_big_blue_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">@dimen/top_title_text_size</item>
    </style>

    <style name="btn_two_middle_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/common_ll_height</item>
        <item name="android:background">@drawable/btn_big_blue_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">@dimen/top_title_text_size</item>
    </style>

    <style name="btn_two_right_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/common_ll_height</item>
        <item name="android:background">@drawable/btn_common_round_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">@dimen/top_title_text_size</item>
    </style>
    <!--底部按钮 无圆角-->
    <style name="btn_bottom_blue_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_ll_height</item>
        <item name="android:background">@drawable/btn_common_square_selector</item>
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">@dimen/top_title_text_size</item>
    </style>

    <!--RadioButton-->
    <style name="OrginfoTab_MyRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@drawable/guide_button_textcolor_selector</item>
    </style>


    <!--动画样式-->
    <style name="actAnimation" parent="@android:style/Animation.Activity"><!--activity动画-->
        <item name="android:activityOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_back</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_back</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish</item>
    </style>

    <style name="anim_popup_share"> <!--popupwindow动画-->
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/select_img_popu_slide_in</item>
        <item name="android:windowExitAnimation">@anim/select_img_popu_slide_out</item>
    </style>

    <style name="anim_popup_category">
        <item name="android:windowEnterAnimation">@anim/select_img_popu_slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/select_img_popu_slide_top_exit</item>
    </style>


    <!--字体样式-->
    <!-- 17sp  WHITE -->
    <style name="top_text_color_size_style">
