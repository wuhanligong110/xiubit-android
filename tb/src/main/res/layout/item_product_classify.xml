<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="24dp"
              android:background="@drawable/item_click_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_product_cate_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_product_cate_name"
                    style="@style/text_middle15_black_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="短期产品"/>

                <TextView
                    android:id="@+id/text_product_cate_declare"
                    style="@style/text_small_gray_size_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="90天以内"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <!---->
                <TextView
                    android:id="@+id/text_product_cate_rate"
                    style="@style/text_middle_red_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.00~15.00"
                    android:textSize="22dp"/>

                <TextView
                    style="@style/text_middle_red_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="%"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_product_cate_count"
            style="@style/text_small_gray_size_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="50个"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@drawable/img_arrow_right"/>
    </LinearLayout>

    <View
        style="@style/line_horizontal_common"
        android:layout_marginLeft="64dp"/>

</LinearLayout>