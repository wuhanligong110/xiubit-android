<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_orginfo_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/item_click_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/orgLogoIV"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="top"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_org_name"
                    style="@style/text_middle_black_bold_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingRight="4dp"
                    android:singleLine="true"
                    android:text="貅比特"

                    />
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/redpacketTagIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_redpacket_tag"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/text_product_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/img_red_tag_bg"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:text="新手专享"
                    android:textColor="@color/text_red_common"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/text_product_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/img_red_tag_bg"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:text="新手专享"
                    android:textColor="@color/text_red_common"
                    android:textSize="10dp"/>
                />

                <TextView
                    android:id="@+id/text_product_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/img_red_tag_bg"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:text="新手专享"
                    android:textColor="@color/text_red_common"
                    android:textSize="10dp"/>
                />
            </LinearLayout>

            <TextView
                android:id="@+id/text_orgAdvantage"
                style="@style/text_small_black_size_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text=""/>

            <TextView
                android:id="@+id/text_orgTag"
                style="@style/text_small_common64_size_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:singleLine="true"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_small_gray_size_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/institution_list_item_tender_count"/>

                <TextView
                    android:id="@+id/text_tender_count"
                    style="@style/text_small_gray_size_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="0"
                    android:textSize="12dp"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_year_title"
                        style="@style/text_small_gray_size_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/institution_list_item_date"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_orginfo_date_limt_min"
                            style="@style/text_small_gray_size_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/text_orginfo_date_limt_uni_min"
                            style="@style/text_small_gray_size_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个月"/>

                        <TextView
                            android:id="@+id/text_orginfo_date_limt_max"
                            style="@style/text_small_gray_size_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="~0"/>

                        <TextView
                            android:id="@+id/text_orginfo_date_limt_uni_max"
                            style="@style/text_small_gray_size_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个月"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


                <TextView
                    style="@style/text_small_gray_size_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/institution_list_item_income"/>

                <TextView
                    android:id="@+id/text_annual_rate"
                    style="@style/text_small_gray_size_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="0.00"/>

                <TextView
                    style="@style/text_small_gray_size_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"/>


            </LinearLayout>

        </LinearLayout>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/img_arrow_right"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/activityLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="74dp"
            android:background="@drawable/img_invite_line_dash_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="35dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/img_institution_activity_tag"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"

                >
                <!--  app:autoScrolltextSize="5dp" 字体大小-->
                <com.toobei.common.view.AutoScrollTextView
                    android:id="@+id/text_switcher"
                    style="@style/text_small_dark_blue_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:autoLink="web"
                    android:text=""
                    app:autoScrolltextColor="@color/dark_blue_text"
                    app:scrollDuration="4000"/>
                <!--设置一个大的值 暂时停止活动滚动-->
                <TextView
                    android:id="@+id/text_activity_name"
                    style="@style/text_small_dark_blue_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:autoLink="web"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/backgroud_common"/>
</LinearLayout>