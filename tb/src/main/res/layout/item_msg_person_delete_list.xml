<?xml version="1.0" encoding="utf-8"?><!--通知-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/WHITE"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/msg_person_del_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="12dp">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/checkbox"
            android:gravity="center"
            android:paddingRight="12dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_read_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_msg_unread"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_time"
                style="@style/text_small_gray_size_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.1"
                android:text="2016-12-01 xxx"/>

            <TextView
                android:id="@+id/text_content"
                style="@style/text_small_black_size_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lineSpacingMultiplier="1.3"
                android:text="你的理财师sdfsdf你的理财师sdfsdf你的理财师sdfsdf你的理财师sdfsdf你的理财师sdfsdf你的理财师sdfsdf"
                />

            <TextView
                android:id="@+id/text_link"
                style="@style/text_small_blue_size_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="点击立即查看"
                android:textColor="@color/text_link_blue"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line_horizontal_common"

        android:layout_marginLeft="24dp"/>

</LinearLayout>