<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/income_min_int"
            style="@style/income_year_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5." />

        <TextView
            android:id="@+id/income_min_float"
            style="@style/income_year_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5%" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/income_max_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            style="@style/income_year_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~" />

        <TextView
            android:id="@+id/income_max_int"
            style="@style/income_year_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11." />

        <TextView
            android:id="@+id/income_max_float"
            style="@style/income_year_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%" />
    </LinearLayout>

</LinearLayout>